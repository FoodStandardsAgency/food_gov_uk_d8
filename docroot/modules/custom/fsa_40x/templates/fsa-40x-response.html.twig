{#
/**
 * @file
 * Custom theme implementation for error pages.
 *
 * Variables:
 * - status_code: numeric status code (404, 403 or 401)
 * - error: The short error message (status message)
 * - content: The supportive text content.
 *
 */
#}
<div class="error-message error-message--{{ status_code }}">
  <div class="error-message__content">
    <h1 class="error-message__heading">{{ error }} - {{ status_code }}</h1>
    <p class="error-message__paragraph">{{ content }}</p>
  </div>
  
  <img class="error-message__image error-message__image--{{ status_code }}" src="/themes/custom/fsa/dist/img/error/{{ status_code }}.png" alt="Error {{ status_code }}" />
  
</div>