{#
/**
 * @file
 * Theme override to display a consultation promo.
 *
 * @see template_preprocess_node()
 *
 */
#}
<div class="promo-wrapper">
  <a href="{{ url }}" {{ attributes.addClass(['promo', 'promo--light', 'promo-wrapper--full-height']) }}>
    {% if content.field_consultations_type %}
      <div class="promo__type">
        {{ content.field_consultations_type }}
      </div>
    {% endif %}
    {{ title_prefix }}
    {% if not page %}
      <h3{{ title_attributes }} class="promo__content">
        {{ label }}
      </h3>
    {% endif %}
    {{ title_suffix }}

    <div{{ content_attributes }}>
      {{ content|without('field_consultations_type') }}
    </div>

    <div class="promo__date">{{ consultation_dates }}</div>
  </a>
</div>
