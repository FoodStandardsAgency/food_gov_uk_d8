{#
/**
 * @file
 * FSA Content header.
 *
 * Displays fields and action links between page title and content area.
 *
 * Variables:
 *    attributes: Classes etc. attributes.
 *    intro: Value of field_intro
 *    update_date: Value of field_last_updated
 *    link_pdf: Pdf generation link
 *    link_print: Page print text (use .page-print-trigger in wrapper to trigger the browser print dialog)
 *    share: Sharing options (addtoany)
#}
<div{{ attributes }}>
  {% if intro %}
    {{ intro }}
  {% endif %}
  
  <div class="content-toolbar">
    {% if update_date %}
      <div class="content-toolbar__item content-toolbar__item--date">
        {{ update_date }}
      </div>
    {% endif %}

    {% if link_pdf %}
      <div class="content-toolbar__item content-toolbar__item--pdf">
        {{ link_pdf }}
      </div>
    {% endif %}

    {% if link_print %}
      <div class="content-toolbar__item content-toolbar__item--print">
        <button class="page-print-trigger">{{ link_print }}</button>
      </div>
    {% endif %}

    {% if share %}
      <div class="content-toolbar__item content-toolbar__item--share">
        {{ share }}
      </div>
    {% endif %}
  </div>
</div>
