<?php

/**
 * @file
 * Alters language switcher.
 */

/**
 * Implements hook_language_switch_links_alter().
 */
function fsa_language_switcher_language_switch_links_alter(array &$links, $type, $path) {
  if (isset($links['en']['title'])) {
    $links['en']['title'] = 'EN';
  }
  if (isset($links['cy']['title'])) {
    $links['cy']['title'] = 'CY';
  }
  return $links;
}
