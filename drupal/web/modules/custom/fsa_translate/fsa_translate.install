<?php

/**
 * @file
 * Installs FSA translate.
 */

/**
 * Implements hook_schema().
 */
function fsa_translate_schema() {
  $schema['fsa_translation_required'] = [
    'description' => 'Tracking table for nodes requiring translation.',
    'fields' => [
      'nid' => [
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ],
      'translation_required' => [
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ],
    ],
    'primary key' => ['nid'],
  ];
  return $schema;
}

/**
 * Add tracking table for nodes requiring translation.
 */
function fsa_translate_update_8001(&$sandbox) {
  $connection = \Drupal::database();
  $schema = $connection->schema();
  if (!$schema->tableExists('fsa_translation_required')) {
    $spec = [
      'description' => 'Tracking table for nodes requiring translation.',
      'fields' => [
        'nid' => [
          'type' => 'int',
          'unsigned' => TRUE,
          'not null' => TRUE,
        ],
        'translation_required' => [
          'type' => 'int',
          'unsigned' => TRUE,
          'not null' => TRUE,
        ],
      ],
      'primary key' => ['nid'],
    ];
    $schema->createTable('fsa_translation_required', $spec);
  }
}

/**
 * Implements hook_update_N().
 */
function fsa_translate_update_8002() {

  // Default translation required configuration.
  $config_factory = \Drupal::configFactory();
  $config = $config_factory->getEditable('config.fsa_translate');
  $config->set('translation_required_mail_recipient', 'fsa.communications@food.gov.uk');
  $config->set('translation_required_mail_subject', 'Translation required');
  $config->set('translation_required_mail_body', '<p>Draft content <strong>[node:title]</strong> has been flagged as requiring translation at [site:url-brief].</p><ul><li>Edit: [node:edit-url]</li><li>Revisions: [site:url]/node/[node:nid]/revisions</li></ul>');
  $config->save(TRUE);
}

