{#
/**
 * @file fsa-ratings-search-page.html.twig
 * Theme implementation for FSA Ratings search result page.
 *
 * Available variables:
 * - form: the search form with it's header.
 * - keywords: The search  keyword(s)
 * - items: The actual search items.
 * - hits_total: Total number of results.
 * - hits_shown: Number of hits shown on page.
 *
 * @ingroup themeable
 */
#}
{{ form }}

{% if sort_form %}
  <div>{{ hits_total }} {{ 'Results'|t }}</div>
  <div>{{ sort_form }}</div>
{% endif %}

{{ ratings_info_content }}

{% if items %}
  <div class="fsa-ratings-items">
    {% if keywords %}
      <h2>{% trans %}Search results for {{ keywords|placeholder }}{% endtrans %}</h2>
    {% endif %}

      {{ items }}
    <div id="search-load-more-wrapper"></div>{# the ajax-wrapper for load-more content #}
  </div>
{% endif %}

{% if hits_total > hits_shown %}
  <div class="result-counter">
      {% trans %}Displaying <span class="hits-shown">{{ hits_shown }}</span> of <span class="hits-total">{{ hits_total }}</span> items{% endtrans %}
  </div>
{% endif %}

